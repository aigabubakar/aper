<IfModule mod_rewrite.c>
    Options -Indexes
    RewriteEngine On

    # If the file or directory exists, serve it directly.
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Otherwise forward the request to index.php
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
